{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts", "tests/**/*.ts", "foundry/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
